{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "incremental": true,
    "noEmitOnError": false
  },
  "include": [
    "src/main-bulletproof.ts",
    "src/server.ts",
    "src/ai/intelligentDecisionEngine.ts",
    "src/ai/megaPromptSystem.ts",
    "src/ai/viralGenerator.ts",
    "src/services/openaiBudgetedClient.ts",
    "src/learning/**/*",
    "src/jobs/**/*",
    "src/api/learningStatus.ts",
    "src/utils/logger.ts",
    "src/utils/kv.ts",
    "src/utils/circuitBreaker.ts",
    "src/utils/time.ts",
    "src/config/featureFlags.ts",
    "src/lib/supabaseClients.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*"
  ]
}
