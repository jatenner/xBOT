{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "strict": false,
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app/**/*",
    "src/dashboard/**/*",
    "src/agents/**/*",
    "src/utils/**/*",
    "src/scrapers/**/*",
    "src/test/**/*",
    "src/testing/**/*",
    "src/quality/**/*",
    "src/schedule/**/*",
    "src/scheduler/**/*",
    "src/strategy/**/*",
    "scripts/**/*",
    "!scripts/startup-acceptance.ts",
    "!scripts/jobs-learn.ts",
    "!scripts/migrate.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}