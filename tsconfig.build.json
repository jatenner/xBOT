{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "strict": false
  },
  "include": [
    "src/main-bulletproof.ts",
    "src/server.ts",
    "scripts/startup-acceptance.ts",
    "scripts/jobs-learn.ts",
    "scripts/dryrun-plan.ts",
    "scripts/dryrun-reply.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}