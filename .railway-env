# ðŸš€ RAILWAY DEPLOYMENT OPTIMIZATIONS
# Prevents timeouts and speeds up builds

# Skip unnecessary installations during build
SKIP_PLAYWRIGHT=false
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Node.js optimizations
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=1024

# Build optimizations
NPM_CONFIG_TIMEOUT=300000
NPM_CONFIG_CACHE=.npm

# Skip migrations during build (run at runtime)
SKIP_MIGRATIONS=true

# Emergency mode fallbacks
EMERGENCY_MODE=false