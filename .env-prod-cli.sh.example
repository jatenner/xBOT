# Production Environment Variables for CLI Scripts
# Copy this to .env-prod-cli.sh and fill in your actual values

export SUPABASE_URL="https://your-project-ref.supabase.co"
export SUPABASE_ACCESS_TOKEN="your-personal-access-token"
export SUPABASE_PROJECT_REF="your-project-ref"
export SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"
export SUPABASE_ANON_KEY="your-anon-key-here"
export DATABASE_URL="postgresql://postgres:[PASSWORD]@db.your-project-ref.supabase.co:6543/postgres?sslmode=require"
export REDIS_URL="redis://default:[PASSWORD]@your-redis-host:6379"

# Application configuration
export APP_ENV="production"
export LIVE_POSTS="true"
export POSTING_DISABLED="true"  # Keep disabled until ready
export ENABLE_BANDIT_LEARNING="true"
export ENABLE_REPLIES="true"

# Learning system configuration
export BANDIT_SCOPE_CONTENT_PRIOR="0.02"
export BANDIT_SCOPE_REPLY_PRIOR="0.02"
export BANDIT_SCOPE_TIMING_PRIOR="0.50"
export REPLY_MAX_PER_DAY="20"
export REPLY_MINUTES_BETWEEN="10"
export TARGET_DISCOVERY_INTERVAL_MIN="10"
export LEARNING_LOOKBACK_DAYS="45"
export EXPERIMENT_MIN_SAMPLE="20"

# OpenAI configuration
export OPENAI_API_KEY="your-openai-api-key"
export EMBED_MODEL="text-embedding-3-small"

echo "âœ… Environment loaded: APP_ENV=$APP_ENV, POSTING_DISABLED=$POSTING_DISABLED"
