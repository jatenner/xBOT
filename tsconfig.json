{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "src/main.ts",
    "src/agents/postTweet.ts",
    "src/agents/simpleViralHealthGenerator.ts",
    "src/agents/scheduler.ts",
    "src/utils/xClient.ts",
    "src/utils/minimalSupabaseClient.ts",
    "src/utils/formatTweet.ts",
    "src/utils/openaiClient.ts",
    "src/config/liveMode.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "src/agents/!(postTweet|simpleViralHealthGenerator|scheduler).ts",
    "src/utils/!(xClient|minimalSupabaseClient|formatTweet|openaiClient).ts",
    "src/dashboard/**/*",
    "src/singletons/**/*",
    "src/metrics/**/*",
    "src/config/!(liveMode).ts",
    "src/prompts/**/*"
  ]
} 