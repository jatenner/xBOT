{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "incremental": true,
    "noEmitOnError": false
  },
  "include": [
    "src/main.ts",
    "src/main-bulletproof.ts",
    "src/core/aiDrivenPostingSystem.ts",
    "src/core/nextGenPostingSystem.ts",
    "src/emergency/threadFixer.ts",
    "src/ai/viralContentOrchestrator.ts",
    "src/ai/ultimateAIIntegrator.ts",
    "src/ai/hyperIntelligentOrchestrator.ts",
    "src/ai/multiModelOrchestrator.ts",
    "src/ai/expertPersonaSystem.ts",
    "src/ai/realTimeTrendInjector.ts",
    "src/ai/emotionalIntelligenceEngine.ts",
    "src/ai/nextGenAIUpgrade.ts",
    "src/ai/systemIntegrationDeployment.ts",
    "src/ai/bulletproofPrompts.ts",
    "src/ai/enhancedViralOrchestrator.ts",
    "src/ai/promptEvolutionEngine.ts",
    "src/posting/simpleThreadPoster.ts",
    "src/posting/postThread.ts",
    "src/analytics/twitterAnalyticsScraper.ts",
    "src/content/diversityTracker.ts",
    "src/services/openAIService.ts",
    "src/intelligence/adaptivePostingManager.ts",
    "src/engagement/strategicReplies.ts",
    "src/engagement/enhancedStrategicReplies.ts",
    "src/audit/**/*",
    "src/scheduler/analyticsScheduler.ts",
    "src/db/index.ts",
    "src/config/env.ts",
    "src/server.ts",
    "src/playwright/browserFactory.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "test_*.js"
  ]
}