{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "incremental": true,
    "noEmitOnError": false
  },
  "include": [
    "src/main.ts",
    "src/core/autonomousPostingEngine.ts",
    "src/core/simplifiedPostingEngine.ts",
    "src/ai/antiSpamContentGenerator.ts",
    "src/content/masterContentSystem.ts",
    "src/content/contentGrowthEngine.ts",
    "src/content/contentLearningSystem.ts",
    "src/content/unifiedContentOrchestrator.ts",
    "src/content/controversialHealthTopics.ts",
    "src/utils/contentCleaner.ts",
    "src/ai/generate.ts",
    "src/ai/prompts.ts",
    "src/ai/threadGenerator.ts",
    "src/services/openAIService.ts",
    "src/posting/unifiedPostingManager.ts",
    "src/posting/postThread.ts",
    "src/quality/qualityGate.ts",
    "src/metrics/trackTweet.ts",
    "src/db/index.ts",
    "src/utils/intelligentLogging.ts",
    "src/lib/contentQualityGate.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "src/lib/unifiedDataManager_broken.ts",
    "src/ops/health.ts",
    "src/learn/**/*",
    "src/agents/growthEngine*.ts",
    "src/candidates/**/*",
    "src/content/ImageGenerator.ts",
    "src/intelligence/BanditOptimizer.ts",
    "src/intelligence/dataCollectionEngine.ts",
    "src/intelligence/engagementStrategy.ts",
    "src/intelligence/realDataVerifier.ts",
    "src/lib/migrationManager.ts",
    "src/lib/resilientDatabaseManager.ts",
    "src/lib/systemMonitor.ts",
    "src/metrics/followerScraper.ts",
    "src/schedule/loop.ts",
    "src/scrapers/realMetricsScraper.ts",
    "src/utils/bulletproofBrowser.ts",
    "src/content/optimizationAwareContentEngine.ts",
    "src/content/SocialContentOperator.ts",
    "src/core/optimizedPostingEngine.ts"
  ]
}