{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "src/main.ts",
    "src/index.ts",
    "src/developmentLauncher.ts",
    "src/agents/postTweet.ts",
    "src/agents/simpleViralHealthGenerator.ts",
    "src/agents/scheduler.ts",
    "src/agents/diverseContentAgent.ts",
    "src/agents/realTimeContentLearningEngine.ts",
    "src/agents/replyAgent.ts",
    "src/core/autonomousPostingEngine.ts",
    "src/core/continuousTweetMonitor.ts",
    "src/core/unifiedScheduler.ts",
    "src/core/dailyAnalyticsOrchestrator.ts",
    "src/jobs/updateTweetPerformance.ts",
    "src/scraper/scrapeTweets.ts",
    "src/twitter/postReply.ts",
    "src/strategy/tweetingStrategy.ts",
    "src/utils/xClient.ts",
    "src/utils/minimalSupabaseClient.ts",
    "src/utils/formatTweet.ts",
    "src/utils/openaiClient.ts",
    "src/utils/ultimateQuotaManager.ts",
    "src/utils/emergencyBudgetLockdown.ts",
    "src/utils/awarenessLogger.ts",
    "src/config/liveMode.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tests/**/*",
    "src/agents/autonomousLearningAgent.ts",
    "src/agents/autonomousTwitterGrowthMaster.ts",
    "src/agents/realTimeTrendsAgent.ts", 
    "src/agents/trendResearchFusion.ts",
    "src/agents/ultraViralGenerator.ts",
    "src/agents/strategistAgent.ts",
    "src/utils/config.ts",
    "src/utils/budgetAwareOpenAI.ts",
    "src/dashboard/**/*",
    "src/singletons/**/*",
    "src/metrics/**/*"
  ]
} 