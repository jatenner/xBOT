# xBOT Production Environment - Transaction Pooler Optimized
# Copy to .env and configure for Railway deployment

# =============================================================================
# DATABASE (Required) - Supabase Transaction Pooler
# =============================================================================
DATABASE_URL=postgres://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:6543/postgres?sslmode=require
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# =============================================================================
# REDIS (Required)
# =============================================================================
REDIS_URL=your_redis_url_here

# =============================================================================
# OPENAI (Required)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# CORE SETTINGS
# =============================================================================
# SSL mode for all database connections (pooler auto-detected)
DB_SSL_MODE=require
MIGRATION_SSL_MODE=require

# Migration control
DB_MIGRATIONS_ENABLED=true
MIGRATIONS_RUNTIME_ENABLED=true

# Budget and safety
DAILY_OPENAI_LIMIT_USD=5.0
POSTING_DISABLED=true

# Metrics and browser automation
ENABLE_METRICS=false
REAL_METRICS_ENABLED=false

# =============================================================================
# PRODUCTION FLAGS
# =============================================================================
NODE_ENV=production
APP_ENV=production

# =============================================================================
# DEPRECATED/OPTIONAL (not needed for Transaction Pooler)
# =============================================================================
# These variables are no longer required when using Transaction Pooler:
# DB_SSL_ROOT_CERT_PATH - pooler handles SSL termination
# MIGRATION_SSL_ROOT_CERT_PATH - pooler handles SSL termination
# SUPABASE_URL - not needed for backend operations
# SUPABASE_ANON_KEY - not needed for backend operations
# PLAYWRIGHT_BROWSERS_PATH - auto-configured in Docker
