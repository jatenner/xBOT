{
  "name": "xbot",
  "version": "1.0.0",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json > /tmp/build.log 2>&1; BUILD_EXIT=$?; cat /tmp/build.log; if [ \"$BUILD_EXIT\" -eq 0 ] && [ -f dist/src/railwayEntrypoint.js ]; then echo '✅ Build completed - tsc succeeded and entrypoint exists'; exit 0; else echo '❌ Build failed - tsc exit=$BUILD_EXIT, entrypoint exists='; test -f dist/src/railwayEntrypoint.js && echo 'yes' || echo 'no'; exit 1; fi",
    "start": "node dist/src/railwayEntrypoint.js",
    "smoke:local": "bash scripts/smoke_local.sh",
    "smoke:docker": "bash scripts/smoke_docker.sh",
    "dev": "tsx watch src/main.ts",
    "post-now": "tsx scripts/post-immediately.ts",
    "check": "tsx scripts/live-system-check.ts",
    "analyze": "tsx scripts/analyze-posting-issues.ts",
    "diagnose": "tsx scripts/diagnose-system-now.ts",
    "check-tweets": "tsx scripts/check-recent-tweets.ts",
    "verify": "tsx scripts/railway-verify.ts",
    "verify-truth-gap": "tsx scripts/verify-truth-gap.ts",
    "verify-ready": "tsx scripts/railway-ready-check.ts",
    "verify-ops": "tsx scripts/verify-ops.ts",
    "verify-replies": "tsx scripts/verify-replies.ts",
    "inspect:tweet": "tsx scripts/inspect-tweet.ts",
    "validate:fail-closed": "tsx scripts/validate-fail-closed.ts",
    "harvest:once": "tsx scripts/run-harvester-once.ts",
    "session:export": "tsx scripts/export-session-from-chrome.ts",
    "session:export:cdp": "tsx scripts/export-session-from-cdp.ts",
    "session:verify": "tsx scripts/verify-exported-session.ts",
    "env:pull": "tsx scripts/pull-railway-env.ts",
    "whoami:live": "pnpm env:pull && tsx scripts/whoami-check.ts",
    "harvest:live": "pnpm env:pull && tsx scripts/run-harvester-once.ts",
    "db:check:opps": "tsx scripts/db-check-opportunity-constraints.ts",
    "seed:stats": "tsx scripts/seed-stats-top.ts",
    "opps:backfill": "tsx scripts/backfill-opportunity-scores.ts",
    "reply:dry": "DRY_RUN=true POSTING_ENABLED=false REPLIES_ENABLED=false tsx scripts/reply-once.ts",
    "reply:once": "tsx scripts/reply-once.ts",
    "reply:live": "pnpm env:pull && tsx scripts/reply-once.ts",
    "metrics:once": "tsx scripts/metrics-once.ts",
    "runner:sync": "tsx scripts/runner/sync-env-from-railway.ts",
    "runner:check": "tsx scripts/runner/check-env-sync.ts",
    "runner:autosync": "tsx scripts/runner/auto-sync.ts",
    "runner:login": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/login.ts",
    "runner:once": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/poll-and-post.ts --once",
    "runner:start": "launchctl load -w ~/Library/LaunchAgents/com.xbot.runner.plist",
    "runner:stop": "launchctl unload ~/Library/LaunchAgents/com.xbot.runner.plist",
    "runner:restart": "pnpm run runner:stop && pnpm run runner:start",
    "runner:logs": "tail -f ./.runner-profile/runner.log",
    "runner:harvest-once": "HARVEST_MODE=home_scroll RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/harvest-curated.ts",
    "runner:harvest-search": "HARVEST_MODE=search_queries RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/harvest-curated.ts",
    "runner:go-live": "tsx scripts/runner/go-live.ts",
    "runner:go-live2": "tsx scripts/runner/go-live-with-login.ts",
    "runner:login-debug": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/login-debug.ts",
    "runner:chrome-cdp": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/chrome-cdp.ts",
    "runner:reset-chrome": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/reset-chrome.ts",
    "runner:session": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile RUNNER_BROWSER=cdp tsx scripts/runner/session-check.ts",
    "runner:schedule-once": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile RUNNER_BROWSER=cdp tsx scripts/runner/schedule-and-post.ts",
    "runner:schedule-loop": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile RUNNER_BROWSER=cdp tsx scripts/runner/schedule-and-post.ts --loop",
    "runner:schedule-debug": "SCHEDULER_DEBUG_LIMIT=5 RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile RUNNER_BROWSER=cdp tsx scripts/runner/schedule-and-post.ts",
    "runner:one-shot": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile RUNNER_BROWSER=cdp tsx scripts/runner/one-shot.ts",
    "runner:cleanup-queue": "RUNNER_MODE=true RUNNER_PROFILE_DIR=./.runner-profile tsx scripts/runner/cleanup-candidate-queue.ts",
    "runner:diagnostics": "tsx scripts/runner/diagnostics.ts"
  },
  "dependencies": {
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "@supabase/supabase-js": "^2.38.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.8.2",
    "openai": "^4.20.1",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "redis": "^4.6.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7"
  }
}
