{
  "name": "snap2health-xbot",
  "version": "1.0.0",
  "description": "Autonomous X (Twitter) bot for Snap2Health with AI-powered content generation",
  "main": "dist/main.js",
  "scripts": {
    "build": "npx playwright install chromium --force && NODE_OPTIONS=--max_old_space_size=1024 tsc",
    "start": "node dist/main.js",
    "dev": "npm run setup-check && nodemon src/index.js",
    "postbuild": "mkdir -p dist/dashboard && cp src/dashboard/*.html dist/dashboard/ 2>/dev/null || true && mkdir -p dist/prompts && cp -r src/prompts/* dist/prompts/ && echo 'Build completed successfully'",
    "test": "jest",
    "lint": "eslint .",
    "setup-check": "echo 'ðŸ”§ Development environment check' && node -v && npm -v",
    "migrate": "node scripts/db_push.js",
    "dashboard": "node src/dashboard/dashboardLauncher.js",
    "health-check": "curl http://localhost:3000/health || echo 'Health check failed'",
    "env-check": "curl http://localhost:3000/env || echo 'Environment check failed'"
  },
  "keywords": [
    "twitter",
    "bot",
    "ai",
    "healthcare",
    "automation",
    "social-media"
  ],
  "author": "Snap2Health",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "openai": "^4.56.0",
    "playwright": "^1.40.0",
    "socket.io": "^4.7.4",
    "twitter-api-v2": "^1.17.2",
    "winston": "^3.14.2",
    "ws": "^8.18.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.12",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
    "supabase": "1.226.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}